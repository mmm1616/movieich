  <% if @post_movie.favorited_by?(current_user) %>
    <p>
      <%= link_to post_movie_favorites_path(@post_movie), method: :delete, remote: true do %>
        ♥<%= @post_movie.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to post_movie_favorites_path(@post_movie), method: :post, remote: true do %>
        ♡<%= @post_movie.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>