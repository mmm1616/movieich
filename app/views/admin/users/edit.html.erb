<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>

会員ID
<%= @user.id %>


名前
<%= f.text_field :name, class:"form-control col-6" %>

ふりがな
<%= f.text_field :kana_name, class:"form-control col-6" %>


ユーザー名
<%= f.text_field :user_name, class:"form-control" %>


メールアドレス
<%= f.text_field :email, class:"form-control" %>


会員ステータス
<%= f.radio_button :is_deleted, 'false' %>
<%= f.label :is_deleted, '有効', value: false %>
<%= f.radio_button :is_deleted, 'true' %>
<%= f.label :is_deleted, '退会', value: true %>


<%= f.submit '変更内容を保存',class:"btn btn-success" %>


<% end %>
