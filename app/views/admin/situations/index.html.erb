
<%= form_with model: @situation, url: admin_situations_path, method: :post do |f| %>
<%= f.label :name, "シチュエーション" %>
<%= f.text_field :name %>
<%= f.submit '追加する', class: 'btn btn-success' %>
<% end %>



<table>
 <thead>
   <tr>
    <th>シチュエーション</th>
    <th></th>
   </tr>
 </thead>
<% @situations.each do |situation| %>
<tbody>
 <tr>
  <td><%= situation.name %></td>
  <td><%= link_to "編集する", edit_admin_situation_path(situation.id), class:"btn btn-success" %></td>
</tr>
</tbody>    
<% end %>
</table>
 